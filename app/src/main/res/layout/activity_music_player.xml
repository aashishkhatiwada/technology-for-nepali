<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayerActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/currently_played_music_info"
    android:padding="9dp"
    android:drawableTop="@drawable/playing"
    style="@style/TextAppearance.Compat.Notification.Info"
    android:textAlignment="center"
    android:textSize="19sp"
    android:layout_marginBottom="388dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/elapsed_time_textView"
        android:drawableTop="@drawable/timer"
        android:padding="9dp"
        android:text="Elapsed time: 00:00:00/00:00:00"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:textAlignment="center"
        android:textSize="19sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/currently_played_music_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<androidx.appcompat.widget.AppCompatSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rewind_fastForward"
    android:valueFrom="0."
    android:valueTo="100."
android:thumb="@drawable/ic_thumsdown"
    style="@style/Widget.MaterialComponents.Slider"
    android:layout_margin="32dp"
android:stepSize="1"
    app:layout_constraintTop_toBottomOf="@id/elapsed_time_textView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previous_button"
        android:layout_marginEnd="230dp"
app:icon="@drawable/previous"
android:text="previous"
        style="@style/Widget.Material3.Button.UnelevatedButton"

app:layout_constraintTop_toBottomOf="@id/rewind_fastForward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_pause_button"
        app:icon="@drawable/play"
        android:text="play/pause"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        app:layout_constraintTop_toBottomOf="@id/rewind_fastForward"
        app:layout_constraintStart_toEndOf="@id/previous_button"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_button"
        app:icon="@drawable/next"
        android:text="next"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        app:layout_constraintTop_toBottomOf="@id/rewind_fastForward"
app:layout_constraintStart_toEndOf="@id/play_pause_button"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shuffle_button"
        app:icon="@drawable/shuffle"
        android:text="shuffle"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        app:layout_constraintTop_toBottomOf="@id/rewind_fastForward"
        app:layout_constraintStart_toEndOf="@id/next_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>